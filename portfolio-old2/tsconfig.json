{
  "compileOnSave": true,
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "esnext",
    "jsx": "react-jsx", // or "react" for older setups
    "baseUrl": ".",
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "outDir": "wwwroot/js",
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "scripts/**/*"
  ],
  "exclude": [
    "node_modules",
    "wwwroot"
  ]
}